algoritmo "semnome"
// Data : 25/02/2022
// Seção de Declarações 
var
 nome: caractere
 idade: inteiro
 contador: inteiro
 
inicio
// Seção de Comandos
 contador <- 1
 
 repita
 escreval("informe o nome: ")
 leia(nome)
 
 escreval("informe a idade: ")
 leia(idade)
 
 escreval("nome: ", nome, " - idade: ", idade)
 escreval()
 
 contador <- contador + 1
 
 
 ate (contador > 3)
 
fimalgoritmo
